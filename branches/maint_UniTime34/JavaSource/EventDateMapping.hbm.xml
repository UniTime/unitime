<hibernate-mapping package="org.unitime.timetable.model">
    <class name="EventDateMapping" table="date_mapping">

        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>
        
        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            foreign-key="fk_event_date_session"
            not-null="true"/>
            
        <property
            name="classDateOffset"
            column="class_date"
            type="java.lang.Integer"
            not-null="false"/>

        <property
            name="eventDateOffset"
            column="event_date"
            type="java.lang.Integer"
            not-null="false"/>

        <property
            name="note"
            column="note"
            type="java.lang.String"
            not-null="false"
            length="1000"/>
    </class>

</hibernate-mapping>
