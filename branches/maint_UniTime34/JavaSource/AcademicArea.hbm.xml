<hibernate-mapping package="org.unitime.timetable.model">
    <class name="AcademicArea" table="academic_area">
        <cache include="non-lazy" usage="nonstrict-read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">academic_area_seq</param>
            </generator>
        </id>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="java.lang.String"
            not-null="false"
            length="40"/>

        <property
            name="academicAreaAbbreviation"
            column="academic_area_abbreviation"
            type="java.lang.String"
            not-null="true"
            length="10"/>

        <property
            name="title"
            column="long_title"
            type="java.lang.String"
            not-null="true"
            length="100"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            not-null="true"/>

        <set
            name="posMajors"
            table="pos_acad_area_major"
            inverse="true"
            lazy="true">

            <cache include="non-lazy" usage="read-write"/>
            <key column="academic_area_id"/>
            <many-to-many
                class="org.unitime.timetable.model.PosMajor"
                column="major_id"
                foreign-key="fk_acad_area_major_major"/>

        </set>

        <set
            name="posMinors"
            table="pos_acad_area_minor"
            inverse="true"
            lazy="true">

            <cache include="non-lazy" usage="read-write"/>
            <key column="academic_area_id"/>
            <many-to-many
                class="org.unitime.timetable.model.PosMinor"
                column="minor_id"
                foreign-key="fk_acad_area_minor_minor"/>

        </set>

    </class>
</hibernate-mapping>
