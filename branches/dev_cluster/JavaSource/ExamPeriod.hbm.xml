<hibernate-mapping package="org.unitime.timetable.model">
    <class name="ExamPeriod" table="exam_period">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            foreign-key="fk_exam_period_session"
            not-null="true"/>

        <property
            name="dateOffset"
            column="date_ofs"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>

        <property
            name="startSlot"
            column="start_slot"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>

        <property
            name="length"
            column="length"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>
            
        <many-to-one
        	name="examType"
        	class="ExamType"
        	column="exam_type_id"
        	not-null="true"
        	foreign-key="fk_exam_period_type"/>

        <many-to-one
            name="prefLevel"
            class="PreferenceLevel"
            column="pref_level_id"
            not-null="true"/>

        <property
            name="eventStartOffset"
            column="event_start_offset"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>

        <property
            name="eventStopOffset"
            column="event_stop_offset"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>

    </class>
</hibernate-mapping>
