<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="AcademicArea"
		table="ACADEMIC_AREA">

 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">ACADEMIC_AREA_SEQ</param>
            </generator>
        </id>


		<property
			name="externalUniqueId"
			column="EXTERNAL_UID"
			type="java.lang.String"
			not-null="false"
			length="40"
		/>

		<property
			name="academicAreaAbbreviation"
			column="ACADEMIC_AREA_ABBREVIATION"
			type="java.lang.String"
			not-null="true"
			length="10"
		/>

		<property
			name="shortTitle"
			column="SHORT_TITLE"
			type="java.lang.String"
			not-null="true"
			length="50"
		/>

		<property
			name="longTitle"
			column="LONG_TITLE"
			type="java.lang.String"
			not-null="true"
			length="100"
		/>

		<many-to-one
			name="session"
			class="Session"
			column="SESSION_ID"
			not-null="true"
		/>

		<set name="posMajors" table="POS_ACAD_AREA_MAJOR" inverse="true" lazy="true">
			<cache include="non-lazy" usage="read-write"/>
			<key column="ACADEMIC_AREA_ID"/> 
			<many-to-many class="org.unitime.timetable.model.PosMajor" 
				column="MAJOR_ID" 
				foreign-key="FK_ACAD_AREA_MAJOR_MAJOR"
				/>
		</set>

		<set name="posMinors" table="POS_ACAD_AREA_MINOR" inverse="true" lazy="true">
			<cache include="non-lazy" usage="read-write"/>
			<key column="ACADEMIC_AREA_ID"/> 
			<many-to-many class="org.unitime.timetable.model.PosMinor" 
				column="MINOR_ID" 
				foreign-key="FK_ACAD_AREA_MINOR_MINOR"
				/>
		</set>
	</class>
</hibernate-mapping>
