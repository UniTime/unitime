<hibernate-mapping package="org.unitime.timetable.model">
    <class name="CourseDemand" table="course_demand">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="student"
            class="Student"
            column="student_id"
            foreign-key="fk_course_demand_student"
            not-null="true"/>

        <property
            name="priority"
            column="priority"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="waitlist"
            column="waitlist"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="alternative"
            column="is_alternative"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="timestamp"
            column="timestamp"
            type="java.util.Date"
            not-null="true"/>

        <property
            name="critical"
            column="critical"
            type="java.lang.Boolean"
            not-null="false"/>

        <many-to-one
            name="freeTime"
            class="FreeTime"
            column="free_time_id"
            foreign-key="fk_course_demand_free_time"
            not-null="false"/>

        <set
            name="courseRequests"
            table="course_request"
            inverse="true"
            cascade="all">

            <cache include="non-lazy" usage="transactional"/>
            <key column="course_demand_id" foreign-key="fk_course_request_demand"/>
            <one-to-many class="CourseRequest"/>
        </set>

        <set
            name="enrollmentMessages"
            table="student_enrl_msg"
            inverse="true"
            cascade="all">

            <cache include="non-lazy" usage="transactional"/>
            <key column="course_demand_id" foreign-key="fk_student_enrl_msg_demand"/>
            <one-to-many class="StudentEnrollmentMessage"/>
        </set>

        <property
            name="changedBy"
            column="changed_by"
            type="java.lang.String"
            not-null="false"
            length="40"/>

    </class>
</hibernate-mapping>
