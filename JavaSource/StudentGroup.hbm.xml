<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="StudentGroup"
        table="student_group">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">student_group_seq</param>
            </generator>
        </id>

        <property
            name="sessionId"
            column="session_id"
            type="java.lang.Long"
            insert="false"
            update="false"
            not-null="true"
            length="20"/>

        <property
            name="groupAbbreviation"
            column="group_abbreviation"
            type="java.lang.String"
            not-null="true"
            length="30"/>

        <property
            name="groupName"
            column="group_name"
            type="java.lang.String"
            not-null="true"
            length="90"/>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="java.lang.String"
            not-null="false"
            length="40"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            not-null="true"/>

        <many-to-one
            name="type"
            class="StudentGroupType"
            column="type_id"
            not-null="false"/>
        
        <set
            name="students"
            table="student_to_group"
            lazy="true">
            <cache include="non-lazy" usage="transactional"/>
            <key column="group_id" foreign-key="fk_student_group_student"/>
            <many-to-many
                class="Student"
                column="student_id"
                foreign-key="fk_student_group_group"/>

        </set>

        <property
            name="expectedSize"
            column="expected_size"
            type="java.lang.Integer"
            not-null="false"
            />
    </class>

</hibernate-mapping>
