<hibernate-mapping package="org.unitime.timetable.model">
    <class name="PosMinor" table="pos_minor">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="java.lang.String"
            not-null="false"
            length="40"/>

        <property
            name="code"
            column="code"
            type="java.lang.String"
            not-null="true"
            length="40"/>

        <property
            name="name"
            column="name"
            type="java.lang.String"
            not-null="true"
            length="100"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            foreign-key="fk_student_session"
            not-null="true"/>

        <set
            name="academicAreas"
            table="pos_acad_area_minor"
            inverse="false"
            lazy="true">

            <cache include="non-lazy" usage="transactional"/>
            <key column="minor_id"/>
            <many-to-many
                class="org.unitime.timetable.model.AcademicArea"
                column="academic_area_id"
                foreign-key="fk_acad_area_minor_area"/>

        </set>

    </class>
</hibernate-mapping>
