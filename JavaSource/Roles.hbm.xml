<hibernate-mapping package="org.unitime.timetable.model">
    <class name="Roles" table="roles">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="roleId"
            column="role_id"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">role_seq</param>
            </generator>
        </id>

        <property
            name="reference"
            column="reference"
            type="string"
            length="20"
            not-null="true"
            unique="true"/>

        <property
            name="abbv"
            column="abbv"
            type="string"
            length="40"
            not-null="true"
            unique="true"/>
            
        <property
            name="manager"
            column="manager"
            type="boolean"
            not-null="true"/>
            
        <property
            name="enabled"
            column="enabled"
            type="boolean"
            not-null="true"/>

        <property
            name="instructor"
            column="instructor"
            type="boolean"
            not-null="true"/>

        <set name="rights" table="rights">
        	<key column="role_id"/>
        	<element column="value" type="string"/>
        </set>
    </class>
</hibernate-mapping>
