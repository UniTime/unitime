<hibernate-mapping package="org.unitime.timetable.model">
    <class name="UserData" table="user_data">
        <cache include="non-lazy" usage="transactional"/>
        <composite-id>
            <key-property
                name="externalUniqueId"
                column="external_uid"
                type="java.lang.String"
                length="12"/>

            <key-property
                name="name"
                column="name"
                type="java.lang.String"
                length="100"/>

        </composite-id>
        <property
            name="value"
            column="value"
            type="java.lang.String"
            length="4000"
            not-null="true"/>

    </class>
</hibernate-mapping>
