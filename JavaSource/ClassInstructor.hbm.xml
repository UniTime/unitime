<hibernate-mapping package="org.unitime.timetable.model">
    <class name="ClassInstructor" table="class_instructor">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long"
            length="20">

            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">class_instructor_seq</param>
            </generator>
        </id>

        <property
            name="percentShare"
            column="percent_share"
            type="java.lang.Integer"
            not-null="true"
            length="3"/>

        <property
            name="lead"
            type="java.lang.Boolean"
            column="is_lead"
            not-null="true"/>

        <many-to-one
            name="classInstructing"
            class="Class_"
            column="class_id"
            not-null="true"
            insert="true"
            update="true"
            foreign-key="fk_class_instr_class_"/>

        <many-to-one
            name="instructor"
            class="DepartmentalInstructor"
            column="instructor_id"
            not-null="true"
            insert="true"
            update="true"
            foreign-key="fk_class_instr_instr"/>

    </class>
</hibernate-mapping>
